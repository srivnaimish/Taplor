<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/size32dp">

    <View
        android:id="@+id/view"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/easy_one"
        android:layout_width="@dimen/size110dp"
        android:layout_height="@dimen/size110dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/font1"
        android:gravity="bottom|center"
        android:paddingBottom="@dimen/size24dp"
        android:textColor="@color/buttonTextColor"
        android:textSize="@dimen/size17sp"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toStartOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:shadowColor="@color/BLACK" />

    <Button
        android:id="@+id/easy_two"
        android:layout_width="@dimen/size110dp"
        android:layout_height="@dimen/size110dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:gravity="bottom|center"
        android:paddingBottom="@dimen/size24dp"
        android:fontFamily="@font/font1"
        android:textColor="@color/buttonTextColor"
        android:textSize="@dimen/size17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/easy_one"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:shadowColor="@color/BLACK" />

    <Button
        android:id="@+id/easy_three"
        android:layout_width="@dimen/size110dp"
        android:layout_height="@dimen/size110dp"
        android:layout_marginBottom="@dimen/size24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/font1"
        android:gravity="bottom|center"
        android:paddingBottom="@dimen/size24dp"
        android:textColor="@color/buttonTextColor"
        android:textSize="@dimen/size17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:shadowColor="@color/BLACK" />

</android.support.constraint.ConstraintLayout>